<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>PornDB Simple Search</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 2em; background: #fafafa; }
    .search-box { margin-bottom: 2em; }
    input[type="text"] { padding: 0.5em; width: 300px; }
    button { padding: 0.5em 1em; }
    .results { margin-top: 2em; }
    .card { border: 1px solid #ccc; background: #fff; padding: 1em; margin-bottom: 1em; border-radius: 8px; }
  </style>
</head>
<body>
  <h1>PornDB Search</h1>
  <div class="search-box">
    <input type="text" id="query" placeholder="Search performers, movies, scenes..." />
    <button onclick="search()">Search</button>
  </div>
  <div class="results" id="results"></div>

  <script>
    async function search() {
      const q = document.getElementById('query').value.trim();
      if (!q) {
        alert('Please enter a search term.');
        return;
      }
      document.getElementById('results').innerHTML = 'Searching...';

      try {
        const response = await fetch(`https://api.porndb.app/search?q=${encodeURIComponent(q)}`, {
          headers: {
            'Authorization': 'Bearer 33c203dd347d325ef0b53099c7f439c9'
          }
        });
        if (!response.ok) throw new Error('API error');
        const data = await response.json();
        renderResults(data);
      } catch (e) {
        document.getElementById('results').innerHTML = `<span style="color:red">Error fetching data.</span>`;
      }
    }

    function renderResults(data) {
      if (!data || !data.results || !data.results.length) {
        document.getElementById('results').innerHTML = 'No results found.';
        return;
      }
      const html = data.results.map(item => `
        <div class="card">
          <h3>${item.title || item.name}</h3>
          ${item.image_url ? `<img src="${item.image_url}" alt="" style="max-width:200px;">` : ''}
          <p>${item.description || ''}</p>
        </div>
      `).join('');
      document.getElementById('results').innerHTML = html;
    }
  </script>
</body>
</html>
